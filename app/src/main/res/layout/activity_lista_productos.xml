<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".productos.ListaProductosActivity">

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderPrecio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/Titulo"
        tools:layout_editor_absoluteX="8dp" />

    <LinearLayout
        android:id="@+id/Titulo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/miverde"
        app:layout_constraintBottom_toTopOf="@+id/cabeceraListado">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="PRODUCTO"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="22dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cabeceraListado"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="128dp"
        android:background="@color/miactionbarcolor"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_weight="40"
            android:text="ID"
            style="@style/EstiloCabaceraLista"
            />

        <TextView
            android:layout_weight="15"
            android:text="NOMBRE"
            style="@style/EstiloCabaceraLista"
            />

        <TextView
            android:layout_weight="15"
            android:text="PRECIO"
            style="@style/EstiloCabaceraLista" />

        <TextView
            android:layout_weight="20"
            android:text="IMAGEN"
            style="@style/EstiloCabaceraLista" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="315dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cabeceraListado">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recViewProductos"
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cabeceraListado" />

        <ProgressBar
            android:id="@+id/barraProgreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

    </FrameLayout>

    <TextView
        android:id="@+id/precioMasBarato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="precioMasBarato"
        android:text="TprecioMasBarato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

    <TextView
        android:id="@+id/precioMasCaro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="precioMasCaro"
        android:text="precioMasCaro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/precioMasBarato" />

    <TextView
        android:id="@+id/precioMedio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="precioMedio"
        android:text="precioMedio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/precioMasCaro" />


</androidx.constraintlayout.widget.ConstraintLayout>